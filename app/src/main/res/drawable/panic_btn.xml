<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define a gradient that will stretch across the entire background -->
    <gradient
        android:type="linear"
        android:angle="45"
        android:startColor="#BBEFBD"
        android:endColor="#026733" />

    <!-- Define padding to ensure content inside TextInputEditText has space from edges -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp" />

    <!-- Optional: Define rounded corners -->
    <corners android:radius="10dp"/>
</shape>
